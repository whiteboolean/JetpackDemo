<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.jetpackdemo.navigations_05.HomeFragment"
        android:label="家庭"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailFragment4"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/scale_rotation"
            app:exitAnim="@anim/slide_to_right"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.jetpackdemo.navigations_05.DetailFragment"
        android:label="细节"
        tools:layout="@layout/fragment_detail">
        <action
            android:id="@+id/action_detailFragment_to_homeFragment4"
            app:destination="@id/homeFragment" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="jack" />
    </fragment>
</navigation>